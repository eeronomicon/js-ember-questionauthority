{{#if displayQuestionEdit}}
  <h3>I Call Mulligan!</h3>
  <p>In other words, I'd like a do-over, please.</p>
  <form {{action 'updateQuestion' questionToEdit on='submit'}}>
    <div class="form-group">
      <label for="author">Who was I again?</label>
      {{input id="author" value=questionToEdit.author class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="question">What did I just ask?</label>
      {{input id="question" value=questionToEdit.question class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="notes">Let me elaborate a bit here....</label>
      {{textarea rows="4" id="notes" value=questionToEdit.notes class="form-control" required="required"}}
    </div>
    <button type="submit" class="btn btn-warning btn-full">Submit</button>
    <button type="button" {{action 'hideQuestionUpdate'}} class="btn btn-danger btn-full">Cancel</button>
  </form>
{{else}}
  <button class="btn btn-success btn-full" {{action 'displayQuestionUpdate'}}>I'd like to rephrase my question....</button>
  <button class="btn btn-danger btn-full" {{action 'deleteQuestion' questionToEdit}}>Delete this question and purge me of my curiosity!</button>
{{/if}}

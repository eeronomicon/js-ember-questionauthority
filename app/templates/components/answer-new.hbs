{{#if displayAnswerForm}}
  <h3>Here's My Answer!</h3>
  <form {{action 'newAnswer' on='submit'}}>
    <div class="form-group">
      <label for="author">And you are?...</label>
      {{input value=author id="author" class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="answer">What nugget of wisdom do you wish to share in order to dispel the fog of ignorance on display here?</label>
      {{textarea value=answer rows="4" id="answer" class="form-control" required="required"}}
    </div>
    <button type="submit" class="btn btn-warning btn-full">I submit my answer to this weighty question!</button>
    <button type="button" {{action 'hideAnswerForm'}} class="btn btn-danger btn-full">On second thought, I know nothing. That in itself is wisdom.</button>
  </form>
{{else}}
  <button class="btn btn-info btn-full" {{action 'showAnswerForm'}}>I Have an answer!</button>
{{/if}}
